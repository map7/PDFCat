%h1 Listing categories

%table
	%tr#header
		%th#FKey FKey #{@no = 0}
		%th Name
		%th Description
		%th Documents

	- for category in @categories
		%tr#listing.listing
			%td#FKey= @no = @no +1
			%td(style='padding-left:#{category.level * 20}px')= category.name
			%td= category.description
			%td= category.pdfs.count
			%td= link_to 'Show', category, :class=>'ajax',:id => 'show'
			%td= link_to 'Edit', edit_category_path(category), :class => 'ajax', :id => 'edit'
			%td= link_to 'Delete', { :action => 'destroy', :id => category }, :id => "del",
			:confirm => 'Are you sure?', :method => :delete 

= will_paginate @categories
= link_to 'Add New category', new_category_path, :class=> 'ajax', :accesskey=> 'a'
