= link_to 'Relink', {:action => 'relink', :id => @pdf.id }, :id => "relink", :class => 'ajax', :target => 'showitem'
= link_to 'Rotate', {:action => 'rotate', :id => @pdf.id }, :id => "rotate", :class => 'ajax', :target => 'showitem'

= link_to 'Back', pdfs_path, :class=>'ajax', :accesskey=>'esc'