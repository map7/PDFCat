%h1= @pdf.pdfname

#showitem= render :partial => "showitem"

= link_to 'Email', {:action=> 'email', :id=> @pdf}, :id=> "email", :class=>'ajax', :accesskey=>'m'
= link_to 'View', {:action => "attachment", :id => @pdf.id}
= link_to 'Edit', edit_pdf_path(@pdf), :class=>'ajax', :accesskey=>'e'
