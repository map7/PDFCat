<h1>Listing users</h1>

<table>
  <tr>
    <th>Login</th>
    <th>Firm</th>
  </tr>

<% for user in @users %>
  <tr>
    <td><%=h user.login %></td>
    <td><%=h user.firm.name unless user.firm.nil? %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Delete', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= will_paginate @users %>

<%= link_to 'New user', new_user_path %>

