<h1>Missing pdfs</h1>

<div id=listing>

  <table>
    <tr id=header>
      <th id="FKey">Key<% @no = 0 %></th>
      <th>Date</th>
      <th>Name</th>
      <th>Client</th>
      <th>Path last seen</th>
    </tr>


<% for pdf in @pdfs %>
  <tr id=listitem>
    <td id="FKey"><%= @no = @no +1 %></td>

    <td><%= pdf.pdfdate %></td>
    <td><%= pdf.pdfname %></td>
    <td><%= pdf.client.name %></td>
    
    <td><%= pdf.fullpath(current_firm) %></td>

    <td><%= link_to 'Show', pdf,
      :id => "show", :method => :get %></td>
    <td><%= link_to 'Edit', edit_pdf_path(pdf),
      :id => "edit", :method => :get %></td>
    <td><%= link_to 'Delete', pdf,
      :id => "del", :confirm => 'Are you sure?', :method => :post %></td>
  </tr>  

<% end %>

  </table>

<%= will_paginate @pdfs %>

</div>
  
<script>setup('listing');</script>
